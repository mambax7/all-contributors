  "author": "All Contributors (https://allcontributors.org)",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
